<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Saying", :saying %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Published Date", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Workflow state", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% quotes.each do |quote| %>
		<tr>
			<td><%= check_box_tag 'quote[quote_ids][]', quote.id, checked = false, { id: dom_id(quote), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link quote.saying, casein_quote_path(quote) %></td>
			<td><%= casein_table_cell_link quote.author, casein_quote_path(quote) %></td>
			<td><%= casein_table_cell_link d_m_y(quote.published_at), casein_quote_path(quote) %></td>
			<td><%= casein_table_cell_link d_m_y(quote.updated_at), casein_quote_path(quote) %></td>
			<td><%= link_to casein_course_path(course) do %>
				<%= image_tag state_icon(course.workflow_state) %>
				<% end %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_quote_path(quote), :method => :delete, :data => { :confirm => "Are you sure you want to delete this quote?" }) %>
			</td>
		</tr>
	<% end %>
</table>
