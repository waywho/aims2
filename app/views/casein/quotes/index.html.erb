<h2>Quotes<%= casein_pagination_details @quotes %></h2>
<%= form_tag edit_multiple_casein_quotes_path, method: :post do %>
	<%= render :partial => 'casein/quotes/table', :locals => { :quotes => @quotes } %>
	<%= render :partial => 'casein/layouts/multi_btns' %>
<% end %>
<div class="text-center">
	<%= will_paginate @quotes %>
</div>

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new quote".html_safe, new_casein_quote_path %></li>
	Download Data: <%= link_to 'CSV', casein_quotes_path(format: 'csv') %> | 
	<%= link_to 'Excel', casein_quotes_path(format: 'xlsx') %>
	<br />
	<br />
	Import Data with CSV file:
	<br />
	<%= form_tag import_casein_quotes_path, multipart: true do %>
		<%= file_field_tag :file, accept: 'text/csv' %>
		<%= submit_tag "Import", :class => 'btn btn-xs btn-primary pull-right' %>
	<% end %>
<% end %>
