<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>View course format</h2>

<%= form_for @courseformat, :url => casein_courseformat_path(@courseformat) do |f| %>

	<%= render :partial => 'casein/courseformats/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to 'Cancel', casein_courseformats_path, :class => 'btn btn-mini btn-default' %>
		<%= render :partial => 'casein/layouts/approval_q_buttons', :locals => { :f => f } %>
	</p>

<% end %>

<div class="row">
	<div class='col-lg-12 col-md-12'>
		<%= render partial: 'casein/photos/photo_upload', object: @courseformat, as: :imageable %>
	</div>
</div>

<div class="row">
	<div class = 'container-fluid'>
		<%= form_tag update_multiple_casein_photos_path do %>
		<label class = 'control-label'>Current <%= @courseformat.title %> photos </label>
			<%= render partial: 'casein/photos/photo_multi_edit', object: @courseformat, as: :imageable %>
		<% end %>
	</div>
</div>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_courseformats_path %></li>
	<li><%= link_to "#{casein_show_icon "plus-sign"}Add Photos from Gallery".html_safe, '#', data: { toggle: 'modal', target: '#myModal'} %></li>
	<%= simple_form_for @courseformat, :url => casein_courseformat_path(@courseformat), html: {:id => 'stateform'}, remote: true do |f| %>
		<%= render partial: 'casein/layouts/status_form', :locals => {:f => f, :record => @courseformat } %>
	<% end %>
<% end %>

<%= render partial: 'casein/photos/photo_modal_gallary', object: @courseformat, as: :imageable %>