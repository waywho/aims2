<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6" >
		<%= casein_text_field f, f.object, :title, placeholder: 'add the year to the format name, eg. Summer Course 2016 or Mini-Aims 2016' %>
	</div>
		<div class="col-lg-6 col-md-6">
		<%= casein_date_field f, f.object, :published_at, label: "Publish date" %>
	</div>
</div>
<div class="row">
	<div class="col-lg-9 col-md-8">
		<%= casein_text_area f, f.object, :description, :class => "description-box" %>
	</div>
	<div class="col-lg-3 col-md-4">
		<%= casein_date_field f, f.object, :when_from %>
		<%= casein_date_field f, f.object, :when_to %>
		<%= casein_check_box f, f.object, :homepage_feature %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_field f, f.object, :venue %>
	</div>
</div>
<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :address1 %>

		<%= casein_text_field f, f.object, :address2 %>
	</div>
	<div class="col-lg-6 col-md-6">
			<div class="col-lg-6 col-md-6">
				<%= casein_text_field f, f.object, :city %>
			</div>
			<div class="col-lg-6 col-md-6">
				<%= casein_text_field f, f.object, :county %>
			</div>
			<div class="col-lg-6 col-md-6">
				<%= casein_text_field f, f.object, :country %>
			</div>
			<div class="col-lg-6 col-md-6">
				<%= casein_text_field f, f.object, :post_code %>
			</div>
	</div>
</div>
<div class="row">
	<%= f.simple_fields_for :highlights do |builder| %>
		<%= render 'casein/courseformats/highlight_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add highlight", f, :highlights %>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<b>Pages</b>
		<div class="well">
			<%= f.collection_check_boxes :page_ids , Page.all, :id, :title do |b| %>
				<label>
				<%= b.check_box class: 'check_box' %><%= b.label class: 'collection_check_boxes' %></label>
			<% end %>
		</div>
	</div>
</div>
