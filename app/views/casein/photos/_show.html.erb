<h4>Edit photo details</h4>

<%= simple_form_for @photo, :url => casein_photo_path(@photo) do |f| %>

	<%= image_tag @photo.image, :class => 'img-responsive' %>
	<br />
	<%= f.input :caption %>
	<% if @photo.imageable_type == 'Staff' %>
		<%= f.input :imageable_id, collection: Staff.all, label: 'Assign to...' %>
	<% else %>
		<%= f.input :imageable_id, collection: [CourseFormat, Course, Event], label: 'Assign to...', as: :grouped_select, group_method: :all %>
	<% end %>

	<%= f.button :submit, :class => "btn btn-mini btn-primary" %>

<% end %>
<br />
<%= link_to "#{casein_show_icon "trash"}delete photo".html_safe, casein_photo_path(@photo), :method => :delete, :data => { :confirm => "Are you sure you want to delete this photo?" } %>