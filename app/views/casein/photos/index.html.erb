<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>Photos<%= casein_pagination_details @photos %></h2>
	<div class = 'row'>
		<% @photos.each do |photo| %>
		<div class = 'col-xs-6 col-md-2'>
			<%= link_to casein_photo_path(photo) do %>
			<%= image_tag photo.image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
			<% end %>
			<div class = 'caption'>
				<%= photo.caption %>
			</div>
		</div>
		<% end %>
	</div>

<div class="text-center">
	<%= will_paginate @photos %>
</div>

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new photo".html_safe, new_casein_photo_path %></li>

<% end %>