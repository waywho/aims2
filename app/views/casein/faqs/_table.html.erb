<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Question", :question %></th>
			<th><%= casein_sort_link "Answer", :answer %></th>
			<th><%= casein_sort_link "Published at", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% faqs.each do |faq| %>
		<tr>
			<td><%= check_box_tag 'faq[faq_ids][]', faq.id, checked = false, { id: dom_id(faq), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link faq.question, casein_faq_path(faq) %></td>
			<td><%= casein_table_cell_link faq.answer, casein_faq_path(faq), :casein_truncate => 150 %></td>
			<td><%= casein_table_cell_link faq.published_at, casein_faq_path(faq) %></td>
			<td><%= casein_table_cell_link faq.updated_at, casein_faq_path(faq) %></td>
			<td><%= casein_table_cell_link faq.workflow_state, casein_faq_path(faq) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_faq_path(faq), :method => :delete, :data => { :confirm => "Are you sure you want to delete this faq?" }) %>
			</td>
		</tr>
	<% end %>
</table>
