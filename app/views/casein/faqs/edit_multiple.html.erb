<!-- Scaffolding generated by Casein v5.1.1.5 -->
<h2>FAQs</h2>

<%= form_tag update_multiple_casein_faqs_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

	<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Question", :question %></th>
			<th><%= casein_sort_link "Answer", :answer %></th>
			<th><%= casein_sort_link "Published at", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Workflow state", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @faqs.each do |faq| %>
		<%= simple_fields_for 'faqs[]', faq do |f| %>
		<tr>
			
			<td><%= f.input :question, label: false %></td>
			
			<td><%= f.input :answer, label: false %></td>
			
			<td><%= f.input :published_at, label: false %></td>
			
			<td><%= f.input :updated_at, label: false %></td>
			
			<td><%= f.input :workflow_state, label: false %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_faq_path(faq), :method => :delete, :data => { :confirm => "Are you sure you want to delete this faq?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</table>

	<p class="submits">
	<%= link_to 'Cancel', casein_faqs_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	


<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new faq".html_safe, new_casein_faq_path %></li>

<% end %>
