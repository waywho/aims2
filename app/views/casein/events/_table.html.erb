<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Time", :date %></th>
			<th><%= casein_sort_link "Ticket Type", :ticket_type %></th>
			<th><%= casein_sort_link "Publish Date", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% events.each do |event| %>
		<tr>
			<td><%= check_box_tag 'event[event_ids][]', event.id, checked = false, { id: dom_id(event), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link event.title, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link d_m_y(event.date), casein_event_path(event) %></td>
			<td><%= casein_table_cell_link time_of_date(event.date), casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.ticket_type, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link d_m_y(event.published_at), casein_event_path(event) %></td>
			<td><%= casein_table_cell_link d_m_y(event.updated_at), casein_event_path(event) %></td>
			<td><%= link_to casein_event_path(event) do %>
				<%= image_tag state_icon(event.workflow_state) %>
				<% end %>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_event_path(event), :method => :delete, :data => { :confirm => "Are you sure you want to delete this event?" }) %>
			</td>
		</tr>
	<% end %>
</table>
