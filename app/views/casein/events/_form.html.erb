<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_field f, f.object, :title %>
	</div>
</div>
<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_date_field f, f.object, :date %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_time_select f, f.object, :date, label: 'Time' %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :description, :class => 'description-box' %>
	</div>
</div>

<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_area f, f.object, :programme, :class => 'description-box' %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_text_area f, f.object, :performers, :class => 'description-box' %>
	</div>
</div>

<% if @event.photo.present? %>
	<div class="row">
		<div class="col-lg-6 col-md-6">		
			<%= image_tag @event.photo.image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
			<%= link_to "#{casein_show_icon "trash"}delete photo".html_safe, casein_photo_path(@event.photo), :method => :delete, :data => { :confirm => "Are you sure you want to delete this photo?" } %>
		</div>

		<div class="col-lg-6 col-md-6">
			<%= casein_file_field f, f.object, :event, :update_photo, name: 'event[photo_attributes][image]' %>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="col-lg-12 col-md-12">		
			<%= casein_file_field f, f.object, :event, :add_photo, name: 'event[photo_attributes][image]' %>
		</div>
		</div>
<% end %>


