<h2>Edit Events</h2>

<%= form_tag update_multiple_casein_events_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>

	<table class="table table-striped table-hover table-condensed">
		<thead>
				<th><%= casein_sort_link "Title", :title %></th>
				<th><%= casein_sort_link "Date", :date %></th>
				<th><%= casein_sort_link "Time", :date %></th>
				<th><%= casein_sort_link "Ticket Type", :ticket_type %></th>
				<th><%= casein_sort_link "Status", :workflow_state %></th>
				<th>&nbsp;</th>
			</tr>
		</thead>

		<% @events.each do |event| %>
			<%= simple_fields_for "events[]", event do |f| %> 
			<tr>
				<td><%= casein_table_cell_link event.title, casein_event_path(event) %></td>
				<td><%= f.input :date, as: :date, html5: true, label: false  %></td>
				<td><%= f.input :date, as: :time, html5: true, label: false  %></td>
				<td><%= f.input :ticket_type, collection: Fee.event, label: false, label_method: :full_description, value_method: :full_description %></td>
				<td><%= f.input :workflow_state, label: false, collection: Event.states %></td>
			</tr>
			<% end %>
		<% end %>
	</table>
	<p class="submits">
		<%= link_to 'Cancel', casein_events_path, :class => 'btn btn-mini btn-default' %>
		<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new event".html_safe, new_casein_event_path %></li>
<% end %>