<h2>Events<%= casein_pagination_details @events %></h2>

<%= form_tag edit_multiple_casein_events_path, method: :post do %>
	<%= render :partial => 'casein/events/table', :locals => { :events => @events } %>
	<%= render :partial => 'casein/layouts/multi_btns' %>
<% end %>

<div class="text-center">
	<%= will_paginate @events %>
</div>

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new event".html_safe, new_casein_event_path %></li>
	Download Data: <%= link_to 'CSV', casein_events_path(format: 'csv') %> | 
	<%= link_to 'Excel', casein_events_path(format: 'xlsx') %>
	<br />
	<br />
	Import Data with CSV file:
	<br />
	<%= form_tag import_casein_events_path, multipart: true do %>
		<%= file_field_tag :file, accept: 'text/csv' %>
		<%= submit_tag "Import", :class => 'btn btn-xs btn-primary pull-right' %>
	<% end %>
<% end %>
