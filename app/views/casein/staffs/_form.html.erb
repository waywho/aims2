			<%= image_tag @staff.photo.image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
		<% else %>
			<%= casein_file_field f, f.object, :staff, :image, name: 'staff[photo_attributes][image]' %>
		<% end %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :name %>	
