<!-- Scaffolding generated by Casein v5.1.1.5 -->

<div class="row">
	<% if @staff.photo.present? %>

			<div class="col-lg-6 col-md-6">
				<%= link_to "#{casein_show_icon "trash"}delete photo".html_safe, casein_photo_path(@staff.photo), :method => :delete, :class => 'pull-right', :data => { :confirm => "Are you sure you want to delete this photo?" } %>
				<%= image_tag @staff.photo.image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
			</div>

			<div class="col-lg-6 col-md-6">
				<%= casein_file_field f, f.object, :staff, :update_photo, name: 'staff[photo_attributes][image]' %>
			</div>

	<% else %>

			<div class="col-lg-6 col-md-6">		
				<%= casein_file_field f, f.object, :staff, :add_photo, name: 'staff[photo_attributes][image]' %>
			</div>

	<% end %>
	<div class="col-lg-6 col-md-6">
		<%= casein_date_field f, f.object, :published_at, casein_label: "Publish date" %>
	</div>
</div>
<div class ="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :first_name %>	
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :last_name %>	
	</div>
</div>
<div class = 'row'>
	<div class="col-lg-6 col-md-6">
		<%= casein_select f, f.object, :role, Staff::ROLES, include_blank: true %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :speciality_list, casein_label: "Speciality (separated by commas)", value: f.object.speciality_list.to_s, id: 'keywords', data: {autocomplete_source: ActsAsTaggableOn::Tag.all.map(&:name)} %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :biography, :class => 'description-box' %>
	</div>
</div>

