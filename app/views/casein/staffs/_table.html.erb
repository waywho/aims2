<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Role", :role %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% staffs.each do |staff| %>
		<tr>
			<td><%= check_box_tag 'staff[staff_ids][]', staff.id, checked = false, { id: dom_id(staff), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link staff.name, casein_staff_path(staff) %></td>
			<td><%= casein_table_cell_link staff.role, casein_staff_path(staff) %></td>
			<td><%= casein_table_cell_link staff.updated_at, casein_staff_path(staff) %></td>
			<td><%= link_to casein_staff_path(staff) do %>
				<%= image_tag state_icon(staff.workflow_state) %>
				<% end %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_staff_path(staff), :method => :delete, :data => { :confirm => "Are you sure you want to delete this staff?" }) %>
			</td>
		</tr>
	<% end %>
</table>