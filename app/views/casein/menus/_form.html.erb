<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_collection_select f, f.object, 'menu', :parent_id, Page.published_now.order(:title), :id, :title, include_blank: true, casein_label: 'Parent menu item' %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_select f, f.object, :menu_type, Menu::TYPES, include_blank: true %>
	</div>
</div>
<div class="row">
	<b>Published pages</b>
	<br />
	<p>
	<% @pages.each do |page| %>
	<div class="col-lg-6 col-md-6">
		<p>
		<%= check_box_tag 'menu[page_ids][]', page.id, checked = false, { id: dom_id(page) } %>
		<%= page.title %>
 		</p>
	</div>
	<% end %>
	</p>
</div>

