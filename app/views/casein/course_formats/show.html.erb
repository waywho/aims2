<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>View course format</h2>

<%= form_for @course_format, :url => casein_course_format_path(@course_format) do |f| %>

	<%= render :partial => 'casein/course_formats/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to 'Cancel', casein_course_formats_path, :class => 'btn btn-mini btn-danger' %>
		<%= render :partial => 'casein/layouts/approval_q_buttons', :locals => { :f => f } %>
	</p>

<% end %>

<div class="row">
	<div class='col-lg-12 col-md-12'>
			<%= render partial: 'casein/photos/photo_upload', object: @course_format, as: :imageable %>
	</div>
</div>

<div class="row">
	<div class = 'container-fluid'>
		<%= form_tag update_multiple_casein_photos_path do %>
		<label class = 'control-label'>Current <%= @course_format.title %> photos </label>
			<% if @course_format.photos.present? %>

				<%= render partial: 'casein/photos/photo_multi_edit', object: @course_format, as: :imageable %>
			
			<% else %>
				<br />
				<i>There are currently no photos for <%= @course_format.title %></i>
			<% end %>
		<% end %>
	</div>
</div>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_course_formats_path %></li>
	<li><%= link_to "#{casein_show_icon "plus-sign"}Add Photos from Gallery".html_safe, '#', data: { toggle: 'modal', target: '#myModal'} %></li>
	<%= simple_form_for @course_format, :url => casein_course_format_path(@course_format), html: {:id => 'stateform'}, remote: true do |f| %>
		<%= render partial: 'casein/layouts/status_form', :locals => {:f => f, :record => @course_format } %>
	<% end %>
<% end %>

<%= render partial: 'casein/photos/photo_modal_gallary', object: @course_format, as: :imageable %>