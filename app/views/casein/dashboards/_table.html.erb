<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Index", :index %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% dashboards.each do |dashboard| %>
		<tr>
			<td><%= check_box_tag 'dashboard[dashboard_ids][]', dashboard.id, checked = false, { id: dom_id(dashboard), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link dashboard.index, casein_dashboard_path(dashboard) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_dashboard_path(dashboard), :method => :delete, :data => { :confirm => "Are you sure you want to delete this dashboard?" }) %>
			</td>
		</tr>
	<% end %>
</table>
