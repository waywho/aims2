<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :caption %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_text_area f, f.object, :description %>
	</div>
</div>

<% if f.object.file.present? %>
	<div class ='row'>

			<div class="col-lg-6 col-md-6">
				<%= link_to f.object.file_url do %>
					<%= image_tag f.object.file_url(:thumb).to_s, :class => 'img-responsive' %>
					<%= f.object.caption %>
				<% end %>
			</div>

			<div class="col-lg-6 col-md-6">
				<%= casein_file_field f, f.object, :document, :file %>
			</div>
	</div>

	<% else %>
	<div class ='row'>

			<div class="col-lg-6 col-md-6">		
				<%= casein_file_field f, f.object, :document, :file %>
			</div>
			<div class="col-lg-6 col-md-6">
		
			</div>
	</div>
<% end %>

