<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "File", :file %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% documents.each do |document| %>
		<tr>
			<td><%= check_box_tag 'document[document_ids][]', document.id, checked = false, { id: dom_id(document), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link document.caption, casein_document_path(document) %></td>
			<td><%= casein_table_cell_link document.description, casein_document_path(document) %></td>
			<td><%= casein_table_cell_link document.file_url, casein_document_path(document) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_document_path(document), :method => :delete, :data => { :confirm => "Are you sure you want to delete this document?" }) %>
			</td>
		</tr>
	<% end %>
</table>
