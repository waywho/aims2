<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :title %>
	</div>
	<div class="col-lg-5 col-md-5">
		<%= casein_date_field f, f.object, :published_at, casein_label: "Publish date" %>
	</div>
	<div class="col-lg-1 col-md-1 feature_page_check">
		<%= f.check_box :feature %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :content, :class => 'description-box' %>
	</div>
</div>
<div class="row">
	<% if @page.feature_image.present? %>

			<div class="col-lg-6 col-md-6">
				<%= image_tag @page.feature_image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
			</div>

			<div class="col-lg-6 col-md-6">
				<%= casein_file_field f, f.object, :page, :feature_image %>
			</div>

	<% else %>

			<div class="col-lg-6 col-md-6">		
				<%= casein_file_field f, f.object, :page, :feature_image %>
			</div>

	<% end %>
</div>