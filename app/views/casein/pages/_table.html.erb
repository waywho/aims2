<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Workflow state", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% pages.each do |page| %>
		<tr>
			<td><%= check_box_tag 'page[page_ids][]', page.id, checked = false, { id: dom_id(page), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link page.title, casein_page_path(page) %></td>
			<td><%= casein_table_cell_link page.content, casein_page_path(page) %></td>
			<td><%= casein_table_cell_link d_m_y(page.updated_at), casein_page_path(page) %></td>
			<td><%= link_to casein_page_path(page) do %>
					<%= image_tag state_icon(page.workflow_state) %>
					<% end %>
				</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_page_path(page), :method => :delete, :data => { :confirm => "Are you sure you want to delete this page?" }) %>
			</td>
		</tr>
	<% end %>
</table>