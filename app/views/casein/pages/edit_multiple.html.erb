<%= form_tag update_multiple_casein_pages_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Feature", :feature_page %></th>
			<th><%= casein_sort_link "Publish Date", :published_at %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @pages.each do |page| %>
		<%= simple_fields_for "pages[]", page do |f| %> 
		<tr>
			<td><%= casein_table_cell_link page.title, casein_page_path(page) %></td>
			<td><%= f.input :published_at, as: :date, html5: true, label: false  %></td>
			<td><%= f.input :feature_page, label: false %></td>
			<td><%= f.input :workflow_state, label: false, :collection => Page.states %>
					</td>
				</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_page_path(page), :method => :delete, :data => { :confirm => "Are you sure you want to delete this page?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
</table>

<p class="submits">
		<%= link_to 'Cancel', casein_pages_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new klass".html_safe, new_casein_klass_path %></li>

<% end %>