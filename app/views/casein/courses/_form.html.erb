<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :title, placeholder: "Solo Course" %>
	</div>
	<div class="col-lg-6 col-md-6">
		<%= casein_date_field f, f.object, :published_at, casein_label: "Publish date" %>
	</div>
</div>
<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_collection_select f, f.object, 'course', :courseformat_id, Courseformat.all, :id, :title, casein_label: "Course Format" %>
	</div>
	<div class="col-lg-3 col-md-3">
		<%= casein_check_box f, f.object, :bookable %>
	</div>
		<div class="col-lg-3 col-md-3">
		<%= casein_check_box f, f.object, :feature %>
	</div>
</div>
<div class = 'row'>
	<div class="col-lg-12 col-md-12">
		<%= casein_text_field f, f.object, :keyword_list, casein_label: "Keywords (separated by commas)", value: f.object.keyword_list.to_s, id: 'keywords', data: {autocomplete_source: ActsAsTaggableOn::Tag.all.map(&:name)} %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :description, :class => "description-box" %>
	</div>
</div>