<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Status", :status %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Published at", :published_at %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% courses.each do |course| %>
		<tr>
			<td><%= casein_table_cell_link course.name, casein_course_path(course) %></td>
			<td>
				<% if course.draft? && !course.published? %>
				draft
				<% elsif course.draft? && course.published? %>
				published but has a draft
				<% elsif course.published? %>
				published
				<% end %>
			</td>
			<td><%= casein_table_cell_link course.updated_at, casein_course_path(course) %></td>
			<td><%= casein_table_cell_link course.published_at, casein_course_path(course) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_course_path(course), :method => :delete, :data => { :confirm => "Are you sure you want to delete this course?" }) %>
			</td>
		</tr>
	<% end %>
</table>