<h2>Edit Courses</h2>

<%= form_tag update_multiple_casein_courses_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Status", :status %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @courses.each do |course| %>
		<%= simple_fields_for 'courses[]', course do |f| %>
		<tr>			
			<td><%= casein_table_cell_link course.title, casein_course_path(course) %></td>
			<td><%= f.input :workflow_state, label: false, collection: Course.states %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_course_path(course), :method => :delete ) %>
			</td>
		</tr>
		<% end %>
	<% end %>
</table>
<% end %>