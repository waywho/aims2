<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>Course</h2>

<%= form_for @course, :url => casein_course_path(@course), html: {multipart: true} do |f| %>

	<%= render :partial => 'casein/courses/form', :locals => { :f => f } %>
	<p class="submits">
		<%= link_to 'Cancel', casein_courses_path, :class => 'btn btn-mini btn-default' %>
		<%= render :partial => 'casein/layouts/approval_q_buttons', :locals => { :f => f } %>
	</p>

<% end %>

<div class="row">
	<div class = 'container-fluid'>
		<%= form_tag update_multiple_casein_photos_path do %>
		<label class = 'control-label'>Current <%= @course.title %> photos </label>
			<%= render partial: 'casein/photos/photo_multi_edit', object: @course, as: :imageable %>
		<% end %>
	</div>
</div>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_courses_path %></li>
	<li><%= link_to "#{casein_show_icon "plus-sign"}Add Photos".html_safe, '#', data: { toggle: 'modal', target: '#myModal'} %></li>
	
	<%= simple_form_for @course, :url => casein_course_path(@course), html: {:id => 'stateform'}, remote: true do |f| %>
		<%= render partial: 'casein/layouts/status_form', :locals => {:f => f, :record => @course } %>
	<% end %>
<% end %>

<%= render partial: 'casein/photos/photo_modal_gallary', object: @course, as: :imageable %>
