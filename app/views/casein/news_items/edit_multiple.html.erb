<!-- Scaffolding generated by Casein v5.1.1.5 -->
<h2>News items</h2>

<%= form_tag update_multiple_casein_news_items_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

	<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Published at", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Workflow state", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @news_items.each do |news_item| %>
		<%= simple_fields_for 'news_items[]', news_item do |f| %>
		<tr>
			
			<td><%= f.input :title, label: false %></td>
			
			<td><%= f.input :description, label: false %></td>
			
			<td><%= f.input :published_at, as: :date, html5: true, label: false %></td>
			
			<td><%= f.input :workflow_state, label: false, :collection => NewsItem.states %>
					</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_news_item_path(news_item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this news item?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</table>

	<p class="submits">
	<%= link_to 'Cancel', casein_news_items_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	


<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new news item".html_safe, new_casein_news_item_path %></li>

<% end %>
