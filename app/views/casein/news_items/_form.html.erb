<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :title %>
	</div>
		<div class="col-lg-6 col-md-6">
		<%= casein_date_field f, f.object, :published_at %>
	</div>
</div>

<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_area f, f.object, :description, :class => 'description-box' %>
	</div>
	<div class="col-lg-6 col-md-6">
		<% if @news_item.photo.present? %>

			<div class="col-lg-6 col-md-6">
				<%= link_to "#{casein_show_icon "trash"}delete photo".html_safe, casein_photo_path(@news_item.photo), :method => :delete, :class => 'pull-right', :data => { :confirm => "Are you sure you want to delete this photo?" } %>
				<%= image_tag @news_item.photo.image_url(:thumb).to_s, :class => 'thumbnail img-responsive' %>
			</div>

			<div class="col-lg-6 col-md-6">
				<%= casein_file_field f, f.object, :news_item, :update_photo, name: 'news_item[photo_attributes][image]' %>
			</div>

	<% else %>

			<div class="col-lg-6 col-md-6">		
				<%= casein_file_field f, f.object, :news_item, :add_photo, name: 'news_item[photo_attributes][image]' %>
			</div>

	<% end %>
	</div>
</div>

