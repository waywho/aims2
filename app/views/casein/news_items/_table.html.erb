<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Published at", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Workflow state", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% news_items.each do |news_item| %>
		<tr>
			<td><%= check_box_tag 'news_item[news_item_ids][]', news_item.id, checked = false, { id: dom_id(news_item), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link news_item.title, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.description, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.published_at, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.updated_at, casein_news_item_path(news_item) %></td>
			<td><%= link_to casein_news_items_path(news_item) do %>
					<%= image_tag state_icon(news_item.workflow_state) %>
					<% end %>
				</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_news_item_path(news_item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this news item?" }) %>
			</td>
		</tr>
	<% end %>
</table>
