<h2>Fees</h2>

<%= form_tag update_multiple_casein_fees_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

	<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Fee type", :fee_type %></th>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Amount", :amount %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th><%= casein_sort_link "Eventable", :eventable_id %></th>
			<th><%= casein_sort_link "Eventable type", :eventable_type %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @fees.each do |fee| %>
		<%= simple_fields_for 'fees[]', fee do |f| %>
		<tr>
			
			<td><%= casein_table_cell_link fee.fee_type, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.category, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.description, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.amount, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.workflow_state, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.eventable_id, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.eventable_type, casein_fee_path(fee) %></td>
			
			<td><%= casein_table_cell_link fee.updated_at, casein_fee_path(fee) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_fee_path(fee), :method => :delete, :data => { :confirm => "Are you sure you want to delete this fee?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</table>

	<p class="submits">
	<%= link_to 'Cancel', casein_fees_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	


<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new fee".html_safe, new_casein_fee_path %></li>

<% end %>
