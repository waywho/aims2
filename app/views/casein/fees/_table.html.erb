<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Fee type", :fee_type %></th>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Amount", :amount %></th>
			<th><%= casein_sort_link "Course Format", :course_format_id %></th>
			<th><%= casein_sort_link "Publish Date", :published_at %></th>
			<th><%= casein_sort_link "Updated at", :updated_at %></th>
			<th><%= casein_sort_link "Status", :workflow_state %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% fees.each do |fee| %>
		<tr>
			<td><%= check_box_tag 'fee[fee_ids][]', fee.id, checked = false, { id: dom_id(fee), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link fee.fee_type, casein_fee_path(fee) %></td>
			<td><%= casein_table_cell_link fee.category, casein_fee_path(fee) %></td>
			<td><%= casein_table_cell_link truncated_description(fee.description), casein_fee_path(fee) %></td>
			<td><%= casein_table_cell_link fee.amount, casein_fee_path(fee) %></td>
			<td><%= casein_table_cell_link fee.course_format.title, casein_fee_path(fee) if fee.course_format.present? %></td>
			<td><%= casein_table_cell_link d_m_y(fee.published_at), casein_fee_path(fee) %></td>
			<td><%= casein_table_cell_link d_m_y(fee.updated_at), casein_fee_path(fee) %></td>
			<td><%= link_to casein_fee_path(fee) do %>
				<%= image_tag state_icon(fee.workflow_state) %>
				<% end %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_fee_path(fee), :method => :delete, :data => { :confirm => "Are you sure you want to delete this fee?" }) %>
			</td>
		</tr>
	<% end %>
</table>
