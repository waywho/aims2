<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>View format</h2>

<%= form_for @format, :url => casein_format_path(@format) do |f| %>

	<%= render :partial => 'casein/formats/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= render :partial => 'casein/layouts/approval_q_buttons', :locals => { :f => f } %>
	</p>

<% end %>

<div class="row">
	<div class='col-lg-12 col-md-12'>
			<%= render partial: 'casein/photos/photo_upload', object: @format, as: :imageable %>
	</div>
</div>

<div class="row">
	<div class = 'container-fluid'>
		<%= form_tag update_multiple_casein_photos_path do %>
		<label class = 'control-label'>Current <%= @format.title %> photos </label>
			<% if @format.photos.present? %>

				<%= render partial: 'casein/photos/photo_multi_edit', object: @format, as: :imageable %>
			
			<% else %>
				<br />
				<i>There are currently no photos for <%= @format.title %></i>
			<% end %>
		<% end %>
	</div>
</div>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_formats_path %></li>
	<li><%= link_to "#{casein_show_icon "plus-sign"}Add Photos from Gallery".html_safe, '#', data: { toggle: 'modal', target: '#myModal'} %></li>


	<%= render partial: 'casein/layouts/state_form', object: @format, as: :record %>
		<br />
		<br />
	<b>Pubished at:</b>
		<%= d_m_y(@format.published_at) %>
<% end %>