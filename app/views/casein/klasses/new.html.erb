<h2>Add a new klass</h2>

<%= form_for @klass, :url => casein_klasses_path, html: {multipart: true} do |f| %>
	
	<%= render :partial => 'casein/klasses/form', :locals => { :f => f } %>
	
	<p class="submits">
		<%= link_to 'Cancel', casein_klasses_path, :class => 'btn btn-mini btn-default' %>
		<%= f.submit "Add new klass", :class => "btn btn-mini btn-primary" %>
		<% if current_user.is_admin? %>
			<%= submit_tag "Publish", name: 'publish', :class => 'btn btn-mini btn-primary' %>
		<% end %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_klasses_path %></li>
