
<h2>Edit Klasses</h2>
<%= form_tag update_multiple_casein_klasses_path do %>

	<table class="table table-striped table-hover table-condensed">
		<thead>
			<tr>
				<th></th>
				<th><%= casein_sort_link "Title", :title %></th>
				<th><%= casein_sort_link "# of sessions", :number_of_sessions %></th>
				<th><%= casein_sort_link "Session of day", :session_of_day %></th>
				<th><%= casein_sort_link "Course", :course_title %></th>
				<th><%= casein_sort_link "Status", :workflow_state %></th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		
			<% @klasses.each do |klass| %>
				<tr>
					<td><%= check_box_tag 'klass[klass_ids][]', klass.id, checked = false, { id: dom_id(klass), :class => 'index-check' } %>
					</td>
					<td><%= casein_table_cell_link klass.title, casein_klass_path(klass) %></td>
					<td><%= number_field_tag klass.number_of_sessions.to_i, casein_klass_path(klass) %></td>
					<td><%= select_tag klass.session_of_day, options_for_select(Klass::SESSIONS), include_blank: true %></td>
					<td><%= collection_select klass, :imageable_id, Course.all, :id, :title %></td>
					<td><%= select_tag klass, options_for_select(Klass.states), include_blank: true %>
					</td>
					<td class="delete">
						<%= link_to(casein_show_row_icon("trash"), casein_klass_path(klass), :method => :delete, :data => { :confirm => "Are you sure you want to delete this klass?" }) %>
					</td>
				</tr>
			<% end %>				
	</table>

<% end %>

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new klass".html_safe, new_casein_klass_path %></li>

<% end %>