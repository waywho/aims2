<h1 class="page-heading"><%= @news.title %></h1>

<%= d_m_y(@news.published_at) %><br />
<br />
<br />

<div class='news-list col-xs-12 col-sm-12 col-md-4 col-lg-4 pull-right'>
	<% if @newsies.present? %>
		<h2>Other News</h2>
		<ul>
			<% @newsies.each do |news| %>
			<li>
				<%= link_to news_items_path(news) do %>
				<div class='news'>
					<b><%= news.title %></b> - <i><%= d_Month_y(news.published_at) %></i>
				</div>
				<% end %>
			</li>
			<% end %>
		</ul>
	<% end %>
</div>
<div class='col-xs-12 col-sm-12 col-md-8 col-lg-8'>
	<% if @event.photo.present? %>
	<section class ='feature-image col-xs-12 col-sm-12 col-md-offset-1 col-md-10'>
		<%= image_tag @event.photo_url, :class => 'img-responsive' %>
	</section>
	<br />
	<div class='spacer'></div>
<% end %>
	<section class="col-xs-offset-1 col-xs-10">
		<div>
			<%= @news.description.html_safe %>
		</div>
		<br />
		<br />
	</section>
	<div class = 'share col-xs-12'><b>share: </b><%= social_share_button_tag(@news.title) %></div>
</div>