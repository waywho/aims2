<% if staff.photo.present? %>
	<div class = "col-sm-6 col-md-3 col-lg-3" name = <%= staff.combined_name %> >
		<%= link_to staff_path(staff) do %>
	<div class = "thumbnail staff-thumb">
		<%= image_tag staff.photo.image_url %>
			<div class = "caption">
		<h4><%=  staff.full_name %></h4>
			<%= staff.role %>
			</div>
		</div>
		<% end %>
	</div>
<% else %>
	<div class = "col-sm-6 col-md-3 col-lg-3" name = <%= staff.combined_name %>>
		<%= link_to staff_path(staff) do %>
	<div class = "thumbnail staff-thumb">
		<%= image_tag 'image_holder.png' %>
			<div class = "caption">
		<h4><%= link_to staff.full_name %></h4>
			<%= staff.role %>
			</div>
		</div>
		<% end %>
	</div>
<% end %>