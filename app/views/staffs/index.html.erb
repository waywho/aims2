<h1>Staff</h1>

<section class = 'staff-list col-xs-offset-1 container-fluid'>
	<div class='staff-list col-xs-12 col-sm-6 col-md-6 col-lg-6'>
		<h3>Tutors</h3>
		<ul>
		<% @staffs.tutors.each do |staff| %>
			<li><%= staff.name %></li>
		<% end %>
		</ul>
	</div>
	<div class='staff-list col-xs-12 col-sm-6 col-md-6 col-lg-6'>
		<h3>House Pianists</h3>
		<ul>
		<% @staffs.house_pianists.each do |staff| %>
			<li><%= staff.name %></li>
		<% end %>
		</ul>
	</div>
</section>

<section class='staff-photo'>
<h3>Tutors</h3>
	<div class="row">
		<% @staffs.tutors.each do |staff| %>
			<% if staff.photo %>
  			<div class="col-sm-6 col-md-3">
  				<%= link_to staff_path(staff) do %>
    			<div class="thumbnail">
     			<%= image_tag staff.photo.image_url %>
      				<div class="caption">
        			<h3><%= staff.name %></h3>
      				</div>
   				</div>
   				<% end %>
   			</div>
   			<% end %>
   		<% end %>
	</div>
</section>