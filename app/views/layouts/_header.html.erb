<% cache "header", skip_digest: true do %>
	<nav class ="navbar navbar-secondary">
		<div class="navbar-header">
		     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="glyphicon glyphicon-info-sign"></span>
			</button>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse-1">
		<ul class="nav navbar-nav navbar-right">
			<% @menus.secondary.roots.rank(:row_order).each do |menu| %>
		        <% if menu.has_children? %>
			    	<li class="dropdown" id="secondary-dropdown">
			         	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= menu.name %>&nbsp;<span class="caret"></span></a>
				        	<ul class="secondary-dropdown-menu">
					          		<% menu.children.each do |child| %>
					          		<li><%= link_to child.name, child.navigation %></li>
					          		<% end %>

				        	</ul>
			        </li>
			    <% else %>
		        	<li>
		         		<%= link_to menu.name, menu.navigation %>
		         	</li>
		         <% end %>
	        <% end %>
	        <li><%= link_to 'Contact Us', contact_path %></li>
	        <li><%= link_to 'FAQ', faqs_path %></li>
	        <li class = 'social-header-list'><%= link_to image_tag('twitter-icon.png', :class => 'header-social-icon social-icon'), 'https://twitter.com/aims_singing', :id => 'social-icon-link-twitter' %></li>
	        <li class = 'social-header-list'><%= link_to image_tag('facebook-icon.png', :class => 'header-social-icon social-icon'), 'https://www.facebook.com/groups/5182097482', :id => 'social-icon-link-facebook' %></li>
	        <li class = 'social-header-list'><%= link_to image_tag('youtube-icon2.png', :class => 'header-social-icon social-icon'), 'https://www.youtube.com/user/neiljenkinstenor/videos', :id => 'social-icon-link-youtube' %></li>
		</ul>
		</div>

	</nav>
	<div class='container-fluid'>
		<%= link_to root_path do %>
			<div class = "brand col-xs-12 col-sm-12 col-md-9 col-lg-9 text-center-xs text-center-sm">
				<div class = 'logo-container'>
				<%= image_tag "AIMS_red.jpg", :alt => 'AIMS', :class => 'logo img-responsive' %>
				</div>
				<div class = 'title-container'>
					<%= image_tag 'AIMS-title.jpg', :alt => 'International Music School', :class => 'img-responsive title' %>
					<div class ='sub-heading'>For Soloists, Choral Singers and Piano Accompanists</div>
				</div>
			</div>
		<% end %>
	<!-- Begin MailChimp Signup Form -->
		<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 hidden-xs">
			<div id="mc_embed_signup" class="pull-right col-xs-6 col-sm-6 col-md-12 col-lg-12">

				<form action="//aims.us11.list-manage.com/subscribe/post?u=d85fe86b45755ccbb9104d1cc&amp;id=0b11524bf9" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate form-inline" target="_blank" novalidate>


				    <div id="mc_embed_signup_scroll form-group" class = 'mailchimp-form'>
				    	<label class="sr-only" for="email">Email for AIMS Newsletter</label>
						<input type="email" value="" name="EMAIL" class="email form-control" id="mce-EMAIL" placeholder="email address" required>
					    
					    	<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
						    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_d85fe86b45755ccbb9104d1cc_0b11524bf9" tabindex="-1" value=""></div>
					    <button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn btn-default mail-button button">Stay Informed</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!--End mc_embed_signup-->

	<nav class="navbar navbar-default navbar-main">
		<div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
			    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-2" aria-expanded="false">
			    	<span class="sr-only">Toggle navigation</span>
			    	...
			    </button>
		   	</div>

		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="navbar-collapse-2">
			    <ul class="nav navbar-nav">
			      	<% @courseformats.each do |courseformat| %>
			      		<% cache ["header", courseformat] do %>
			        	<li>
				         	<%= link_to courseformat.title, courseformat %>
			         	</li>
			         	<% end %>
			         <% end %>
			         <% @menus.main.roots.rank(:row_order).each do |menu| %>
				        <% if menu.has_children? %>
					    	<li class="dropdown">
					         	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= menu.name %>&nbsp;<span class="caret"></span></a>
						        	<ul class="dropdown-menu">
							          		<% menu.children.each do |child| %>
							          		<li><%= link_to child.name, child.navigation %></li>
							          		<% end %>

						        	</ul>
					        </li>
					    <% else %>
				        	<li>
				         		<%= link_to menu.name, menu.navigation %>
				         	</li>
				        <% end %>
				     <% end %>
			        <li><%= link_to 'Staff', staffs_path %></li>
			        <% if published_news? %>
			        	<li><%= link_to 'News', news_items_path %></li>
			        <% end %>
			        <% if @future_events.length > 0 %>
			        	<li><%= link_to 'Events', events_path %></li>
			        <% end %>
			    </ul>
			    <ul class="nav navbar-nav navbar-right">
			    	<li><%= link_to 'Booking', bookings_path, :id => 'booking' %></li>
			    </ul>  
		    </div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->

	</nav>
<% end %>
<% if controller_name == "courses" || controller_name == 'courseformats' %>
	<div class="collapse navbar-collapse" id="navbar-third">
	<nav class = 'navbar navbar-third'>
		<div class="navbar-header">
		     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="glyphicon glyphicon-info-sign"></span>
			</button>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse-3">

			<ul class = "nav navbar-nav">
				<% @courses.rank(:row_order).each do |course| %>
					<% cache ["header", course] do %>
					<li class='hidden-xs hidden-sm'><%= link_to course.title, course_path(course) %></li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</nav>
</div>
<% end %>

<div class="modal fade" id="booking_warning" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body loading-warning">
      Loading. This may take a few seconds.<div class='loader'></div>
      </div>
  </div>
</div>


<script>
	$(function() {
		$('#booking').click(function() {
			$('#booking_warning').modal('show');
		});
	})
</script>


